{
  "name": "@prosemirror-adapter/monorepo",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "commit": "git-cz",
    "ex": "cross-env CYPRESS_SERVER_PORT=7001 pnpm --filter=e2e start",
    "test": "pnpm build && pnpm --filter=e2e start:test",
    "test:watch": "cross-env CYPRESS_SERVER_PORT=7001 pnpm --filter=e2e start:test:verbose",
    "changeset": "changeset",
    "lint": "eslint .",
    "release": "changeset publish",
    "prepare": "husky install"
  },
  "dependencies": {
    "@antfu/eslint-config": "^0.37.0",
    "@changesets/cli": "^2.25.2",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@type-config/strict": "^1.2.1",
    "@types/rollup-plugin-auto-external": "^2.0.2",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.28.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.3.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prosemirror-keymap": "^1.2.0",
    "prosemirror-model": "^1.18.1",
    "prosemirror-state": "^1.4.2",
    "prosemirror-view": "^1.29.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.2",
    "vite": "^4.2.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "rollup"
      ]
    }
  }
}
